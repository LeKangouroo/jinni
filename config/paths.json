{
  "sources": {
    "html": "src/html/*/*.{html,jade}",
    "js": [
      "!src/vendors/**/*.js",
      "src/**/*.js"
    ],
    "sass": "src/sass/*.scss",
    "svg": "src/images/icons/svg/*.svg"
  },
  "builds": {
    "css": {
      "development": "tmp/css",
      "distributable": "dist/css"
    },
    "html": {
      "development": "tmp",
      "distributable": "dist"
    },
    "js": {
      "development": "tmp",
      "distributable": "dist"
    },
    "svg": {
      "development": "tmp/images/sprites",
      "distributable": "dist/images/sprites"
    }
  }
}
