{
  "sources": {
    "html": "src/html/*/*.{html,jade}",
    "js": [
      "!src/vendors/**/*.js",
      "src/**/*.js"
    ],
    "sass": "src/sass/*.scss",
    "svg": "src/images/icons/svg/*.svg"
  },
  "builds": {
    "css": {
      "development": "tmp/css",
      "distributable": {
        "pre-production": "dist/pre-production/css",
        "production": "dist/production/css"
      }
    },
    "html": {
      "development": "tmp",
      "distributable": {
        "pre-production": "dist/pre-production",
        "production": "dist/production"
      }
    },
    "js": {
      "development": "tmp",
      "distributable": {
        "pre-production": "dist/pre-production",
        "production": "dist/production"
      }
    },
    "svg": {
      "development": "tmp/images/sprites",
      "distributable": {
        "pre-production": "dist/pre-production/images/sprites",
        "production": "dist/production/images/sprites"
      }
    }
  }
}
