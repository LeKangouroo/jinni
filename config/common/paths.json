{
  "sources": {
    "components": {
      "includeBaseDir": "tmp/components",
      "html": "src/components/**/*.html",
      "sass": "src/components/**/*.scss",
      "watch": "src/components/**/*"
    },
    "html": {
      "default": "src/**/*.html",
      "watch": "src/html/**/*.html"
    },
    "jade": {
      "default": "src/html/*/*.jade",
      "watch": "src/html/**/*.jade"
    },
    "js": [
      "!src/vendors/**/*.js",
      "src/**/*.js"
    ],
    "sass": {
        "default": "src/sass/*.scss",
        "watch": "src/sass/**/*.scss"
    },
    "svg": "src/assets/images/icons/svg/*.svg"
  },
  "builds": {
    "components": {
      "development": "tmp/components",
      "distributable": {
        "pre-production": "dist/pre-production/components",
        "production": "dist/production/components"
      }
    },
    "css": {
      "development": "tmp/css",
      "distributable": {
        "pre-production": "dist/pre-production/css",
        "production": "dist/production/css"
      }
    },
    "html": {
      "development": "tmp",
      "distributable": {
        "pre-production": "dist/pre-production",
        "production": "dist/production"
      }
    },
    "js": {
      "development": "tmp",
      "distributable": {
        "pre-production": "dist/pre-production",
        "production": "dist/production"
      }
    },
    "svg": {
      "development": "tmp/assets/images/sprites",
      "distributable": {
        "pre-production": "dist/pre-production/assets/images/sprites",
        "production": "dist/production/assets/images/sprites"
      }
    }
  },
  "static": {
    "base": "src",
    "source": [
      "!src/assets/images/icons{,/**}",
      "!src/vendors/{bourbon,neat}{,/**}",
      "src/assets/**",
      "src/vendors/**"
    ],
    "destination": {
      "pre-production": "dist/pre-production",
      "production": "dist/production"
    }
  }
}
