{
  "sources": {
    "html": {
      "default": [
        "!src/html/_jade{,/**}",
        "src/html/**/*.html"
      ],
      "watch": "src/html/**/*.html"
    },
    "images": "src/**/*.{jpg,png,gif}",
    "jade": {
      "default": [
        "!src/html/_jade{,/**}",
        "src/html/**/*.jade"
      ],
      "watch": "src/html/**/*.jade"
    },
    "js": {
      "default": "src/js/*.js",
      "watch": [
        "!src/sections/**/*.scss",
        "src/js/**/*.js",
        "src/sections/**"
      ]
    },
    "sass": {
        "default": "src/sass/*.scss",
        "watch": "src/**/*.scss"
    },
    "svg": "src/assets/images/icons/svg/*.svg"
  },
  "builds": {
    "css": {
      "development": "tmp/css",
      "distributable": "dist/css"
    },
    "html": {
      "development": "tmp",
      "distributable": "dist"
    },
    "images": {
      "development": "tmp",
      "distributable": "dist"
    },
    "js": {
      "development": "tmp/js",
      "distributable": "dist/js"
    },
    "svg": {
      "development": "tmp/assets/images/sprites",
      "distributable": "dist/assets/images/sprites"
    }
  },
  "static": {
    "base": "src",
    "source": [
      "!src/**/*.{jpg,png,gif}",
      "!src/assets/images/icons{,/**}",
      "src/assets/**",
      "src/vendors/**"
    ],
    "destination": "dist"
  }
}
